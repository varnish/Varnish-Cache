	rxreq
	expect req.url == "/xxx0.htm"
	txresp -body "foo0"
	rxreq
	expect req.url == "/xxx1.htm"
	txresp -body "foo1"
	rxreq
	expect req.url == "/xxx2.htm"
	txresp -body "foo2"
	rxreq
	expect req.url == "/xxx3.htm"
	txresp -body "foo3"
