# $Id$

test "VCL/VRT: req.grace, obj.ttl and obj.grace"


server s1 {
	rxreq 
	txresp -hdr "Connection: close" -body "012345\n"
}

server s1 -start 

varnish v1 -vcl+backend {
	sub vcl_recv {
		set req.grace += 1 s;
	}
	sub vcl_fetch {
		set beresp.ttl += 1 m;
		set beresp.grace += 1 h;
	}
} -start

client c1 {
	txreq -url "/"
	rxresp
	expect resp.status == 200
}

client c1 -run

server s1 -wait

varnish v1 -stop
