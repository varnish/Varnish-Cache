# $Id$

test "Check <esi: detector"

server s1 {
        rxreq
        expect req.url == "/foo"
        txresp -hdr "Connection: close"
        send {           <a>   <esi/>                          }
} -start

varnish v1 -vcl+backend {
        sub vcl_fetch {
                esi;
        }
} -start

varnish v1 -cliok "debug.fragfetch 4"

client c1 {
        txreq -url /foo
        rxresp
	expect resp.bodylen == 49
} -run

varnish v1 -expect esi_parse == 0
varnish v1 -expect esi_errors == 0
